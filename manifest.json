{
  "manifest_version": 3,
  "name": "LinkedIn Note Auto-Generator",
  "version": "1.0",
  "description": "Automatically generates and adds personalized notes when sending LinkedIn connection requests",
  "permissions": ["activeTab","storage"],
  "host_permissions": ["https://www.linkedin.com/*"],

"icons": {
  "16": "image16.png",
  "48": "image48.png",
  "128": "image128.png"
},

"action": {
  "default_popup": "popup.html",
  "default_title": "LinkedIn Note Auto-Generator",
  "default_icon": {
    "16": "image16.png",
    "48": "image48.png",
    "128": "image128.png"
  }
},

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "service_worker": "background.js"
  }
}
